{{! src/views/admin/condiciones/asignados.hbs }}
<div class="container-fluid py-4">
    <div class="mb-4">
        <a href="/admin/condiciones" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Volver a Condiciones
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                <i class="bi bi-people"></i> {{title}}
            </h5>
            <small>{{condicion.nombre}}</small>
        </div>
        <div class="card-body">
            {{#if usuarios.length}}
            <p class="text-muted">
                Total de usuarios con esta condición: <strong>{{usuarios.length}}</strong>
            </p>
            <div class="table-responsive">
                <table class="table table-hover" id="usuariosTable">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>CUIT</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each usuarios}}
                        <tr>
                            <td>{{this.nombre}}</td>
                            <td>{{this.cuit}}</td>
                            <td>{{this.email}}</td>
                            <td>
                                <span class="badge {{#if (eq this.role 'admin')}}bg-danger{{else}}bg-primary{{/if}}">
                                    {{this.role}}
                                </span>
                            </td>
                            <td class="text-end">
                                <a href="/admin/usuarios/{{this.id}}/edit" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Ver usuario
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                No hay usuarios asignados a esta condición comercial.
            </div>
            {{/if}}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#usuariosTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
            }
        });
    });
</script>