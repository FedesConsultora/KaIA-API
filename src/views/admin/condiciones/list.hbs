{{! src/views/admin/condiciones/list.hbs }}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-tag"></i> Condiciones Comerciales
        </h2>
        <a href="/admin/condiciones/new" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle"></i> Nueva Condición
        </a>
    </div>

    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show">
        {{success}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show">
        {{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-sm" id="condicionesTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 120px;">Código</th>
                            <th style="width: 200px;">Nombre</th>
                            <th>Descripción</th>
                            <th style="width: 100px;">Reglas</th>
                            <th style="width: 140px;">Vigencia</th>
                            <th style="width: 120px;" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each condiciones}}
                        <tr>
                            <td>
                                <strong>{{this.codigo}}</strong>
                            </td>
                            <td>
                                <small>{{this.nombre}}</small>
                            </td>
                            <td>
                                <small class="text-muted"
                                    style="max-width: 300px; display: block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    {{#if this.descripcion}}
                                    {{this.descripcion}}
                                    {{else}}
                                    -
                                    {{/if}}
                                </small>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    {{this.CondicionComercialReglas.length}} regla(s)
                                </span>
                            </td>
                            <td>
                                {{#if this.vigencia_desde}}
                                <small>{{formatDate this.vigencia_desde}}</small>
                                {{else}}
                                <small class="text-muted">Sin fecha</small>
                                {{/if}}
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/condiciones/{{this.id}}/asignados" class="btn btn-outline-secondary"
                                        title="Ver usuarios asignados">
                                        <i class="bi bi-people"></i>
                                    </a>
                                    <a href="/admin/condiciones/{{this.id}}/edit" class="btn btn-outline-primary"
                                        title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="POST" action="/admin/condiciones/{{this.id}}?_method=DELETE"
                                        style="display: inline;"
                                        onsubmit="return confirm('¿Eliminar condición {{this.codigo}}?');">
                                        <button type="submit" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No hay condiciones comerciales registradas.
                                <a href="/admin/condiciones/new">Crear una nueva</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#condicionesTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
            },
            order: [[0, 'asc']]
        });
    });
</script>