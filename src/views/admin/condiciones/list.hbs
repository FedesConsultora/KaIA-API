{{! src/views/admin/condiciones/list.hbs }}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-tag"></i> Condiciones Comerciales
        </h2>
        <a href="/admin/condiciones/new" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle"></i> Nueva Condici칩n
        </a>
    </div>

    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show">
        {{success}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show">
        {{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    {{/if}}

    {{! Secci칩n de importaci칩n }}
    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            <h6 class="mb-0">
                <i class="bi bi-file-earmark-excel"></i> Importar desde Excel
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>1. Importar Plantillas de Condiciones</h6>
                    <p class="text-muted small">Sube el Excel con las plantillas (IDDTO + DESCRIPCION)</p>
                    <form method="POST" action="/admin/condiciones/import-plantillas" enctype="multipart/form-data"
                        class="d-flex gap-2">
                        <input type="file" name="excel" accept=".xlsx,.xls" class="form-control form-control-sm"
                            required>
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="bi bi-upload"></i> Importar
                        </button>
                    </form>
                </div>
                <div class="col-md-6">
                    <h6>2. Asignar Condiciones a Usuarios</h6>
                    <p class="text-muted small">Sube el Excel con asignaciones (RAZON SOCIAL + ID)</p>
                    <form method="POST" action="/admin/condiciones/import-asignaciones" enctype="multipart/form-data"
                        class="d-flex gap-2">
                        <input type="file" name="excel" accept=".xlsx,.xls" class="form-control form-control-sm"
                            required>
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-person-check"></i> Asignar
                        </button>
                    </form>
                </div>
            </div>
            <hr class="my-3">
            <div class="row">
                <div class="col-md-12">
                    <h6 class="text-danger">丘멆잺 Herramientas de Limpieza (Irreversible)</h6>
                    <p class="text-muted small">Usa estas opciones con precauci칩n. No se pueden deshacer.</p>
                    <div class="d-flex gap-2">
                        <form method="POST" action="/admin/condiciones/purge-asignaciones"
                            onsubmit="return confirm('丘멆잺 ATENCI칍N: Esto eliminar치 TODAS las asignaciones de condiciones a usuarios.\n\nLas condiciones se mantendr치n, pero ning칰n usuario tendr치 condiciones asignadas.\n\n쮼st치s seguro de continuar?');">
                            <button type="submit" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-eraser"></i> Limpiar Asignaciones
                            </button>
                        </form>
                        <form method="POST" action="/admin/condiciones/purge-all"
                            onsubmit="return confirm('游뚿 PELIGRO: Esto eliminar치:\n- TODAS las condiciones comerciales\n- TODAS sus reglas\n- TODAS las asignaciones a usuarios\n\n쮼st치s ABSOLUTAMENTE seguro?');">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash3"></i> Eliminar Todo
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-sm" id="condicionesTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 120px;">C칩digo</th>
                            <th style="width: 200px;">Nombre</th>
                            <th>Descripci칩n</th>
                            <th style="width: 100px;">Reglas</th>
                            <th style="width: 140px;">Vigencia</th>
                            <th style="width: 120px;" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each condiciones}}
                        <tr>
                            <td>
                                <strong>{{this.codigo}}</strong>
                            </td>
                            <td>
                                <small>{{this.nombre}}</small>
                            </td>
                            <td>
                                <small class="text-muted"
                                    style="max-width: 300px; display: block; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    {{#if this.descripcion}}
                                    {{this.descripcion}}
                                    {{else}}
                                    -
                                    {{/if}}
                                </small>
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    {{this.CondicionComercialReglas.length}} regla(s)
                                </span>
                            </td>
                            <td>
                                {{#if this.vigencia_desde}}
                                <small>{{formatDate this.vigencia_desde}}</small>
                                {{else}}
                                <small class="text-muted">Sin fecha</small>
                                {{/if}}
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/condiciones/{{this.id}}/asignados" class="btn btn-outline-secondary"
                                        title="Ver usuarios asignados">
                                        <i class="bi bi-people"></i>
                                    </a>
                                    <a href="/admin/condiciones/{{this.id}}/edit" class="btn btn-outline-primary"
                                        title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="POST" action="/admin/condiciones/{{this.id}}?_method=DELETE"
                                        style="display: inline;"
                                        onsubmit="return confirm('쮼liminar condici칩n {{this.codigo}}?');">
                                        <button type="submit" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No hay condiciones comerciales registradas.
                                <a href="/admin/condiciones/new">Crear una nueva</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#condicionesTable').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
            },
            order: [[0, 'asc']]
        });
    });
</script>