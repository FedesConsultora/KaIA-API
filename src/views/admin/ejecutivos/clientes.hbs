{{! src/views/admin/ejecutivos/clientes.hbs }}
<div class="container-fluid py-4">
    <div class="mb-4">
        <a href="/admin/ejecutivos" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Volver a Ejecutivos
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-people"></i> Clientes de: {{ejecutivo.nombre}}
            </h5>
            <small>{{ejecutivo.email}} • {{ejecutivo.phone}}</small>
        </div>
        <div class="card-body">
            {{#if clientes.length}}
            <p class="text-muted">
                Total de clientes: <strong>{{clientes.length}}</strong>
            </p>
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 60px;">ID</th>
                            <th>Nombre</th>
                            <th style="width: 140px;">Teléfono</th>
                            <th style="width: 120px;">CUIT</th>
                            <th style="width: 200px;">Email</th>
                            <th style="width: 80px;">Rol</th>
                            <th style="width: 100px;" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each clientes}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.nombre}}</td>
                            <td><small>{{this.phone}}</small></td>
                            <td><small>{{this.cuit}}</small></td>
                            <td><small class="text-muted">{{this.email}}</small></td>
                            <td>
                                <span class="badge {{#if (eq this.role " admin")}}bg-danger{{else}}bg-primary{{/if}}">
                                    {{this.role}}
                                </span>
                            </td>
                            <td class="text-end">
                                <a href="/admin/usuarios/{{this.id}}/edit" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Ver
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                Este ejecutivo no tiene clientes asignados.
            </div>
            {{/if}}
        </div>
    </div>
</div>