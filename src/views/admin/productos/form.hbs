<h1>{{#if isEdit}}Editar{{else}}Nuevo{{/if}} producto</h1>
{{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}

<form
  action="/admin/productos{{#if isEdit}}/{{producto.id}}?_method=PUT{{/if}}"
  method="POST"
  class="row g-3"
>
  <div class="col-md-6">
    <label class="form-label">Código KronenVet</label>
    <input name="id_articulo" class="form-control" value="{{producto.id_articulo}}">
  </div>

  <div class="col-md-6">
    <label class="form-label">Nombre *</label>
    <input name="nombre" class="form-control" value="{{producto.nombre}}" required>
  </div>

  <div class="col-md-4">
    <label class="form-label">Costo</label>
    <input name="costo" type="number" step="0.01" min="0" class="form-control" value="{{producto.costo}}">
  </div>

  <div class="col-md-4">
    <label class="form-label">Precio *</label>
    <input name="precio" type="number" step="0.01" min="0" class="form-control" value="{{producto.precio}}" required>
  </div>

  <div class="col-md-4">
    <label class="form-label">Presentación</label>
    <input name="presentacion" class="form-control" value="{{producto.presentacion}}">
  </div>

  <div class="col-md-4">
    <label class="form-label">Marca</label>
    <input name="marca" class="form-control" value="{{producto.marca}}">
  </div>

  <div class="col-md-4">
    <label class="form-label">Proveedor</label>
    <input name="proveedor" class="form-control" value="{{producto.proveedor}}">
  </div>

  <div class="col-md-4">
    <label class="form-label">Rubro</label>
    <input name="rubro" class="form-control" value="{{producto.rubro}}">
  </div>

  <div class="col-md-4">
    <label class="form-label">Familia</label>
    <input name="familia" class="form-control" value="{{producto.familia}}">
  </div>

  <div class="col-md-2">
    <label class="form-label">Stock</label>
    <input name="cantidad" type="number" min="0" class="form-control" value="{{producto.cantidad}}">
  </div>

  <div class="col-md-2">
    <label class="form-label">Stock mín</label>
    <input name="stockMin" type="number" min="0" class="form-control" value="{{producto.stockMin}}">
  </div>

  <div class="col-md-2">
    <label class="form-label">Stock máx</label>
    <input name="stockMax" type="number" min="0" class="form-control" value="{{producto.stockMax}}">
  </div>

  <div class="col-md-3">
    <label class="form-label">Código de barras</label>
    <input name="codBarras" class="form-control" value="{{producto.codBarras}}">
  </div>

  <div class="col-12">
    <label class="form-label">Observaciones</label>
    <textarea name="observaciones" class="form-control" rows="3">{{producto.observaciones}}</textarea>
  </div>

  <div class="col-md-2 form-check">
    <input name="visible" class="form-check-input" type="checkbox" id="chkVisible"
      {{#if producto.visible}}checked{{/if}}>
    <label class="form-check-label" for="chkVisible">Visible</label>
  </div>

  <div class="col-md-2 form-check">
    <input name="debaja" class="form-check-input" type="checkbox" id="chkDebaja"
      {{#if producto.debaja}}checked{{/if}}>
    <label class="form-check-label" for="chkDebaja">De baja</label>
  </div>

  <div class="col-12 mt-3">
    <button class="btn btn-primary">Guardar</button>
    <a class="btn btn-secondary" href="/admin/productos">Volver</a>
  </div>
</form>
