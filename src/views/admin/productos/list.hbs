<h1 class="mb-3 d-flex align-items-center justify-content-between">
  <span>Productos</span>
  <span class="d-flex gap-2">
    <a href="/admin/productos/new" class="btn btn-success btn-sm">‚ûï Nuevo</a>
    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalExcel">
      ‚¨ÜÔ∏è Importar Excel
    </button>
    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalPurge">
      üß® Vaciar cat√°logo
    </button>
  </span>
</h1>

{{!-- Filtros / tama√±o de p√°gina --}}
<form method="GET" class="row g-2 align-items-end mb-3">
  <div class="col-md-4">
    <label class="form-label">Buscar</label>
    <input type="text" name="q" class="form-control" value="{{q}}" placeholder="Nombre, presentaci√≥n, marca, c√≥digo‚Ä¶">
  </div>

  <div class="col-md-2">
    <label class="form-label">Ordenar por</label>
    <select name="sort" class="form-select">
      <option value="nombre"   {{#if (eq sort "nombre")}}selected{{/if}}>Nombre</option>
      <option value="precio"   {{#if (eq sort "precio")}}selected{{/if}}>Precio</option>
      <option value="cantidad" {{#if (eq sort "cantidad")}}selected{{/if}}>Stock</option>
      <option value="id"       {{#if (eq sort "id")}}selected{{/if}}>ID</option>
    </select>
  </div>

  <div class="col-md-2">
    <label class="form-label">Direcci√≥n</label>
    <select name="dir" class="form-select">
      <option value="ASC"  {{#if (eq dir "ASC")}}selected{{/if}}>Ascendente</option>
      <option value="DESC" {{#if (eq dir "DESC")}}selected{{/if}}>Descendente</option>
    </select>
  </div>

  <div class="col-md-2">
    <label class="form-label">Items por p√°gina</label>
    <select name="pageSize" class="form-select">
      <option value="25"  {{#if (eq pageSize 25)}}selected{{/if}}>25</option>
      <option value="50"  {{#if (eq pageSize 50)}}selected{{/if}}>50</option>
      <option value="100" {{#if (eq pageSize 100)}}selected{{/if}}>100</option>
      <option value="200" {{#if (eq pageSize 200)}}selected{{/if}}>200</option>
    </select>
  </div>

  <div class="col-md-2 d-grid">
    <button class="btn btn-primary">Aplicar</button>
  </div>
</form>

<div class="d-flex justify-content-between align-items-center mb-2">
  <form id="bulk-form" action="/admin/productos/bulk" method="POST" class="d-flex align-items-center gap-2">
    <select name="action" class="form-select form-select-sm" required>
      <option value="" selected>‚Äî Acci√≥n masiva ‚Äî</option>
      <option value="delete">üóë Eliminar seleccionados</option>
      <option value="show">üëÅ Mostrar (visible=true)</option>
      <option value="hide">üôà Ocultar (visible=false)</option>
      <option value="alta">‚¨ÜÔ∏è Marcar en alta (debaja=false)</option>
      <option value="baja">‚¨áÔ∏è Marcar de baja (debaja=true)</option>
    </select>
    <button class="btn btn-sm btn-secondary">Aplicar</button>
  </form>

  <small class="text-muted">Total: {{total}} productos ‚Ä¢ P√°gina {{page}} de {{totalPages}}</small>
</div>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th><input type="checkbox" id="chk-all"></th>
        <th>ID</th>
        <th>C√≥digo</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Visible</th>
        <th>De baja</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each productos}}
      <tr>
        <td><input type="checkbox" class="chk-row" value="{{id}}"></td>
        <td>{{id}}</td>
        <td>{{id_articulo}}</td>
        <td>{{nombre}}</td>
        <td>${{precio}}</td>
        <td>{{cantidad}}</td>
        <td>{{#if visible}}‚úî{{else}}‚úñ{{/if}}</td>
        <td>{{#if debaja}}‚úî{{else}}‚Äî{{/if}}</td>
        <td class="text-nowrap">
          <a class="btn btn-sm btn-primary" href="/admin/productos/{{id}}/edit">Editar</a>
          <button
            class="btn btn-sm btn-danger btn-confirmar-eliminar"
            data-id="{{id}}"
            data-nombre="{{nombre}}"
            data-entity="producto"
            data-url="/admin/productos"
          >üóë</button>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>

{{!-- Paginaci√≥n --}}
{{#if (gt totalPages 1)}}
<nav aria-label="Paginaci√≥n" class="mt-3">
  <ul class="pagination justify-content-center flex-wrap">
    {{!-- Prev --}}
    <li class="page-item {{#if (eq page 1)}}disabled{{/if}}">
      <a class="page-link"
         href="?q={{q}}&sort={{sort}}&dir={{dir}}&pageSize={{pageSize}}&page={{max 1 (add page -1)}}">Anterior</a>
    </li>

    {{!-- N√∫meros (ventana de 7 p√°ginas) --}}
    {{#each (pageWindow page totalPages 7)}}
      <li class="page-item {{#if (eq ../page this)}}active{{/if}}">
        <a class="page-link"
           href="?q={{../q}}&sort={{../sort}}&dir={{../dir}}&pageSize={{../pageSize}}&page={{this}}">{{this}}</a>
      </li>
    {{/each}}

    {{!-- Next --}}
    <li class="page-item {{#if (eq page totalPages)}}disabled{{/if}}">
      <a class="page-link"
         href="?q={{q}}&sort={{sort}}&dir={{dir}}&pageSize={{pageSize}}&page={{min totalPages (add page 1)}}">Siguiente</a>
    </li>
  </ul>
</nav>
{{/if}}

{{> modalConfirm }}

<!-- Modal Importaci√≥n Excel -->
<div class="modal fade" id="modalExcel" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/productos/import-excel" method="POST" enctype="multipart/form-data"
        onsubmit="const btn = this.querySelector('button[type=submit]'); btn.disabled = true; btn.querySelector('.spinner-border').classList.remove('d-none');">
        <div class="modal-header">
          <h5 class="modal-title">Importar desde Excel</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Archivo .xlsx</label>
            <input type="file" name="archivo" accept=".xlsx" class="form-control" required>
            <small class="text-muted">Se tomar√°n solo las columnas v√°lidas del modelo.</small>
          </div>
        </div>
        <div class="modal-footer">
          {{> spinnerSubmitBtn label="Importar" }}
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Purge -->
<div class="modal fade" id="modalPurge" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content border-danger">
      <form action="/admin/productos/purge" method="POST"
        onsubmit="return confirm('Esta acci√≥n eliminar√° TODO el cat√°logo. ¬øConfirm√°s?');">
        <div class="modal-header">
          <h5 class="modal-title text-danger">Vaciar cat√°logo (acci√≥n destructiva)</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <p>Escrib√≠ <strong>ELIMINAR-TODO</strong> para confirmar.</p>
          <input class="form-control" name="confirm" required placeholder="ELIMINAR-TODO">
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">üß® Vaciar cat√°logo</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- Alertas flash --}}
