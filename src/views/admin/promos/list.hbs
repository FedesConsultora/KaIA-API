{{!-- views/admin/promos/list.hbs --}}
{{#if success}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    ‚úÖ {{success}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
{{/if}}
{{#if error}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    ‚ùå {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
  </div>
{{/if}}

<h1 class="mb-3 d-flex align-items-center justify-content-between">
  <span>Promociones</span>
  <span class="d-flex gap-2">
    <a href="/admin/promos/new" class="btn btn-success btn-sm">‚ûï Nueva</a>
    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalExcel">
      ‚¨ÜÔ∏è Importar Excel
    </button>
    <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalPurgePromos">
      üß® Borrar todas
    </button>
  </span>
</h1>

<div class="table-responsive">
  <table data-auto="dt" class="table table-striped align-middle">
    <thead>
      <tr><th>ID</th><th>Nombre</th><th>Vigente</th><th>Stock</th><th>Desde</th><th>Hasta</th><th></th></tr>
    </thead>
    <tbody>
      {{#each promos}}
        <tr>
          <td>{{id}}</td>
          <td>{{nombre}}</td>
          <td>{{#if vigente}}‚úî{{else}}‚úñ{{/if}}</td>
          <td>{{stock_disponible}}</td>
          <td>{{vigencia_desde}}</td>
          <td>{{vigencia_hasta}}</td>
          <td>
            <a href="/admin/promos/{{id}}/edit" class="btn btn-sm btn-primary">Editar</a>
            <button class="btn btn-sm btn-danger btn-confirmar-eliminar"
              data-id="{{id}}" data-nombre="{{nombre}}"
              data-entity="promoci√≥n" data-url="/admin/promos">üóë</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{> modalConfirm }}

<!-- Modal Importaci√≥n Excel -->
<div class="modal fade" id="modalExcel" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/promos/import-excel" method="POST" enctype="multipart/form-data"
        onsubmit="const btn = this.querySelector('button[type=submit]'); btn.disabled = true; btn.querySelector('.spinner-border').classList.remove('d-none');">
        <div class="modal-header">
          <h5 class="modal-title">Importar promociones desde Excel</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Archivo .xlsx</label>
            <input type="file" name="archivo" accept=".xlsx" class="form-control" required>
            <small class="text-muted">Solo se toman columnas del modelo (sin asociaciones).</small>
          </div>
        </div>
        <div class="modal-footer">
          {{> spinnerSubmitBtn label="Importar" }}
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal Purge Promos -->
<div class="modal fade" id="modalPurgePromos" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content border-danger">
      <form action="/admin/promos/purge" method="POST"
        onsubmit="return confirm('Esta acci√≥n eliminar√° TODAS las promociones. ¬øConfirm√°s?');">
        <div class="modal-header">
          <h5 class="modal-title text-danger">Eliminar todas las promociones</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <p>Escrib√≠ <strong>ELIMINAR-PROMOS</strong> para confirmar.</p>
          <input class="form-control" name="confirm" required placeholder="ELIMINAR-PROMOS">
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-danger">üß® Borrar todas</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modalEl = document.getElementById('confirmModal');
    if (modalEl) {
      const modal = new bootstrap.Modal(modalEl);
      const confirmForm = document.getElementById('confirm-form');
      const confirmNombre = document.getElementById('confirm-nombre');
      const confirmEntity = document.getElementById('confirm-entity');

      document.addEventListener('click', (event) => {
        const btn = event.target.closest('.btn-confirmar-eliminar');
        if (!btn) return;
        confirmNombre.textContent = btn.dataset.nombre;
        confirmEntity.textContent = btn.dataset.entity || 'registro';
        confirmForm.action = `${btn.dataset.url}/${btn.dataset.id}?_method=DELETE`;
        modal.show();
      });
    }

    const dtTable = document.querySelector('table[data-auto="dt"]');
    if (window.jQuery && dtTable) {
      $(dtTable).DataTable({
        language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json' },
        order: [[1, 'asc']]
      });
    }
  });
</script>
